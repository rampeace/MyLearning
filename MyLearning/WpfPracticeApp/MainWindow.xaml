<Window x:Class="WpfPracticeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="Black">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#F5F5F5" Padding="20" CornerRadius="10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Welcome to WPF" FontSize="21" HorizontalAlignment="Center" Margin="10"/>
                <Button Content="Open VSCode" VerticalAlignment="Center" Click="Button_Click" Margin="20" Padding="10"/>
                <Button Content="Open Product Feedback" VerticalAlignment="Center" Click="Button_Click_1" Margin="20" Padding="10"/>
                <Button Content="Open Contact Form" VerticalAlignment="Center" Click="Button_Click_2" Margin="20" Padding="10"/>
                <Button Content="Open Button Control Template" VerticalAlignment="Center" Click="Button_Click_3" Margin="20" Padding="10"/>
                <Button Content="Open Calculator" VerticalAlignment ="Center" Click="Button_Click_4" Margin="20" Padding="10"/>
            </StackPanel>
        </Border>
    </Grid>   
</Window>
