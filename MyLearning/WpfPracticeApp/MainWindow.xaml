<Window x:Class="WpfPracticeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
            <Label.Content>Hello</Label.Content>
        </Label>

        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="Sample text"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Age" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="textblock"/>
    </Grid>

</Window>
