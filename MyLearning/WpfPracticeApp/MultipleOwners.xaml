<Window x:Class="WpfPracticeApp.MultipleOwners"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp"
        mc:Ignorable="d"
        Title="MultipleOwners" Height="450" Width="800">
    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#F5F5F5" Padding="20" CornerRadius="10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Hello" FontSize="23" Margin="20" Background="Aquamarine"  Padding="12" local:BackgroundBehavior.Background="Lavender"/>
                <TextBlock Text="Hello" FontSize="23" Margin="20" Padding="12"/>
            </StackPanel>
        </Border>
    </Grid>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="SeaGreen"/>
        </Style>
    </Window.Resources>
</Window>
