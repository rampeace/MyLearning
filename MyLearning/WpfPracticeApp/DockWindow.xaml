<Window x:Class="WpfPracticeApp.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp"
        mc:Ignorable="d"
        Title="DockWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <Button Content="File"/>
            <Button Content="Edit"/>
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="Ready"/>
        </StatusBar>
        <StackPanel DockPanel.Dock="Left" Background="Red">
            <Button Content="Home" Margin="5"/>
            <Button Content="Settings" Margin="5"/>
        </StackPanel>
        <Canvas Background="LightGray" Height="200" Width="300">
            <Button Content="Top Left" Canvas.Left="10" Canvas.Top="10" />
            <Button Content="Bottom Right" Canvas.Left="200" Canvas.Top="150" />
        </Canvas>
    </DockPanel>
</Window>
