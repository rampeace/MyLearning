<UserControl x:Class="WpfPracticeApp.ProductCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPracticeApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding ProductName}" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding Rating}" FontStyle="Italic"/>
                <TextBlock Text="{Binding Feedback}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
