<Window x:Class="WpfPracticeApp.Views.Calculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp.Views"
        xmlns:viewmodels="clr-namespace:WpfPracticeApp.ViewModels"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Calculator" Height="450" Width="800">
    <Window.DataContext>
        <viewmodels:CalculatorViewModel/>
    </Window.DataContext>
    <Grid>
        <Border Background="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="textBox1" IsEnabled="True" Focusable="True" Width="100" Margin="10" Text="{Binding Value1, Mode=TwoWay, TargetNullValue=''}"/>
                    <TextBox Focusable="True" Width="100" Margin="10" Text="{Binding Value2, Mode=TwoWay, TargetNullValue=''}"/>
                    <TextBox Focusable="True" Width="100" Margin="10" Text="{Binding Result, Mode=TwoWay, TargetNullValue=''}"/>
                </StackPanel>
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Content="0" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="1" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="0" Grid.Column="2" Content="2" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>

                    <Button Grid.Row="1" Grid.Column="0" Content="3" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="4" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="1" Grid.Column="2" Content="5" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>

                    <Button Grid.Row="2" Grid.Column="0" Content="6" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="2" Grid.Column="1" Content="7" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
                    <Button Grid.Row="2" Grid.Column="2" Content="8" Padding="15" Click="Button_Click" PreviewMouseDown="Button_PreviewMouseDown"/>

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Command="{Binding AddCommand}"  Content="Add" Padding="10" Width="80" Margin="10"/>
                        <Button Command="{Binding SubtractCommand}" Content="Subtract" Padding="10" Width="80" Margin="10"/>
                        <Button Command="{Binding MultiplyCommand}"  Content="Multiply" Padding="10" Width="80" Margin="10"/>
                        <Button Command="{Binding DivideCommand}" Content="Divide" Padding="10" Width="80" Margin="10"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</Window>
