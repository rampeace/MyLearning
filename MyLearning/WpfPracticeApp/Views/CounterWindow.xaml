<Window x:Class="WpfPracticeApp.Views.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp.Views"
        xmlns:vm="clr-namespace:WpfPracticeApp.ViewModels"
        mc:Ignorable="d"
        Title="CounterWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:CounterViewModel/>
    </Window.DataContext>
    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Background="#f5f5f5" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="Count:" Margin="20"/>
                    <TextBlock Text="{Binding Count}" Margin="20"/>
                </StackPanel>
                <Button Grid.Row="1" Content="Click to Increment" Padding="5" Command="{Binding IncrementCommand}"/>
            </Grid>
            
        </Border>        
    </Grid>
</Window>
