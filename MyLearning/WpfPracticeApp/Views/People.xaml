<Window x:Class="WpfPracticeApp.Views.People"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPracticeApp.Views"
        xmlns:model="clr-namespace:WpfPracticeApp.Models"
        mc:Ignorable="d"
         xmlns:viewmodels="clr-namespace:WpfPracticeApp.ViewModels"
        Title="People" Height="450" Width="800">
    
    <Window.DataContext>
        <viewmodels:PersonViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Key="PersonDataTemplate" DataType="{x:Type model:Person}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Data template" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" Margin="5"/>
                <TextBlock Text="{Binding Age}" Margin="5"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ButtonTemplate">
            <TextBlock Background="LightYellow" Text="{Binding}" FontWeight="Bold" />
        </DataTemplate>

        <Style TargetType="Grid" x:Key="Gradient">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Blue" Offset="0.5"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Style="{StaticResource Gradient}">
        <Border Background="#F5F5F5" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ListBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding People}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="NameTextBlock" Width ="60" Text="{Binding Name}" Margin="10"/>
                                <TextBlock Width="20" Text="{Binding Age}" Margin="10"/>
                                <TextBlock Text="{Binding BirthDate, StringFormat='{}{0:dd-MM-yyyy}'}" Margin="10"/>
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Name}" Value="Ava">
                                    <Setter TargetName="NameTextBlock" Property="Background" Value="Bisque"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <ContentControl Content="{Binding Person}" ContentTemplate="{StaticResource PersonDataTemplate}"/>

                    <Button Content="Data template button" ContentTemplate="{StaticResource ButtonTemplate}"/>

                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Multibinding" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="10">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Name: {0}     Age: {1}">
                                <Binding Path="Person.Name"/>
                                <Binding Path="Person.Age"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>            
            </Grid>
        </Border>
    </Grid>
</Window>
